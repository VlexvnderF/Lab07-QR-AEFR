<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab07_QR.MainPage">

    <StackLayout>
        
        <Label Text="Camára para leer codigo código QR" 
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
        <Button x:Name="btnScanCod"
                Text="Leer Código QR"
                Clicked="btnScanCod_Clicked" />
        <Entry x:Name="textResult"
               Placeholder="QR resultado " />
    </StackLayout>

</ContentPage>
